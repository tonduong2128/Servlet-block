<?xml version="1.0" encoding="UTF-8"?>
<!-- Default directory -->
<decorators defaultdir="/decorators">
	<!-- Used here to define pages that do not need to be filtered -->
	<excludes>
		<pattern>/404-page.html</pattern>
		<pattern>/api*</pattern>
	</excludes>

	<!-- Used to define the page to be filtered by the decorator -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>

	<decorator name="web" page="web.jsp">
		<pattern>/</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/dang-nhap</pattern>
	</decorator>

</decorators>